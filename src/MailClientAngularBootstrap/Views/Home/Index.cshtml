<!DOCTYPE html>
<html ng-app="mailClientApp">
<head>
    <meta charset="utf-8">
    <title ng-bind="pageTitle + ' - Mail Client App'"></title>
    <meta name="author" content="Nick Davis (hire@nicholasdavis.co)">
    <meta name="description" content="Code example: Mail client app using AngularJs, Angular UI Boostrap, UI Router, and Bootstrap">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon" />
    <environment names="Development">
        <link rel="stylesheet" href="~/assets/css/global.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/assets/css/global.min.css" asp-append-version="true" />
    </environment>
</head>
<body>

    <div ui-view></div>

    <noscript>
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h1 class="mar-top-none">To Mail Client App, please enable JavaScript on your browser.</h1>
                </div>
            </div>
        </div>
    </noscript>

    <script src="~/assets/lib/angular/angular.js"></script>
    <script src="~/assets/lib/angular-bootstrap/ui-bootstrap.js"></script>
    <script src="~/assets/lib/angular-ui-router/release/angular-ui-router.js"></script>
    <script src="~/assets/lib/moment/moment.js"></script>
    <script src="~/assets/lib/angular-moment/angular-moment.js"></script>
    <script src="~/app/app.js"></script>
    <script src="~/app/components/mail/mail-controller.js"></script>
    <script src="~/app/components/inbox/inbox-controller.js"></script>
    <script src="~/app/components/draft/draft-controller.js"></script>
    <script src="~/app/components/sent/sent-controller.js"></script>
    <script src="~/app/components/archive/archive-controller.js"></script>
    <script src="~/app/components/trash/trash-controller.js"></script>

    <script src="~/app/services/utilities-service.js"></script>
    <script src="~/app/components/user/user-service.js"></script>
    <script src="~/app/components/mail/mail-service.js"></script>
    <script src="~/app/components/inbox/inbox-service.js"></script>
    <script src="~/app/components/draft/draft-service.js"></script>
    <script src="~/app/components/sent/sent-service.js"></script>
    <script src="~/app/components/archive/archive-service.js"></script>
    <script src="~/app/components/trash/trash-service.js"></script>

    <script src="~/app/shared/list-mail-items/list-mail-items-directive.js"></script>

    @*<script src="~/app/app.min.js" asp-append-version="true"></script>*@

</body>
</html>